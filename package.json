{
  "name": "uni-toolkit",
  "type": "module",
  "version": "0.2.9",
  "packageManager": "pnpm@10.18.3",
  "description": "uni tools,uni app 工具库",
  "author": "liujiayii <liujiayii@foxmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/liujiayii/uni-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liujiayii/uni-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/liujiayii/uni-toolkit/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./env": {
      "types": "./dist/env/index.d.ts",
      "import": "./dist/env/index.js",
      "require": "./dist/env/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    },
    "./interceptors": {
      "types": "./dist/interceptors/index.d.ts",
      "import": "./dist/interceptors/index.js",
      "require": "./dist/interceptors/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build2": "tsdown",
    "dev": "npm run clean && tsc --watch",
    "dev2": "tsdown --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "check": "run-p lint typecheck test:run",
    "check:fast": "run-p typecheck test:run",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "deploy": "pnpm run docs:build && gh-pages -d docs/.vitepress/dist --add"
  },
  "dependencies": {
    "@uni-helper/uni-env": "^0.2.0",
    "es-toolkit": "^1.40.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@dcloudio/types": "^3.4.25",
    "@dcloudio/uni-app": "3.0.0-4070620250821001",
    "@types/node": "^24.7.2",
    "@typescript-eslint/parser": "^8.46.1",
    "@uni-helper/uni-use": "^0.19.15",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "1.0.2",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,md}": "eslint --cache --fix"
  }
}
